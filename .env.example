# ============================================================================
# Quilora - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to git - it contains sensitive API keys

# ----------------------------------------------------------------------------
# LLM API Keys (Tiered Strategy)
# ----------------------------------------------------------------------------
# Primary: Groq (Free, fast, excellent for RAG)
# Get your key at: https://console.groq.com
GROQ_API_KEY=gsk_your_groq_api_key_here

# Fallback/Embeddings: OpenAI (GPT-4o-mini for fallback, embeddings)
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# Premium: Anthropic Claude (Optional, for complex queries)
# Get your key at: https://console.anthropic.com
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here

# ----------------------------------------------------------------------------
# LLM Configuration (Hybrid Provider Strategy)
# ----------------------------------------------------------------------------
# Primary LLM (free, fast, 80% of queries)
PRIMARY_LLM_PROVIDER=groq:llama-3.3-70b-versatile

# Fallback LLM (cost-effective backup)
FALLBACK_LLM_PROVIDER=openai:gpt-4o-mini

# Premium LLM (best quality, for critical queries)
PREMIUM_LLM_PROVIDER=anthropic:claude-3-5-sonnet-20240620

# LLM Parameters
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024
LLM_STREAMING=true

# ----------------------------------------------------------------------------
# Qdrant Vector Database
# ----------------------------------------------------------------------------
# For local development (Docker)
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=documents
QDRANT_API_KEY=

# For Qdrant Cloud (optional)
# QDRANT_URL=https://your-cluster.qdrant.io
# QDRANT_API_KEY=your_qdrant_cloud_api_key

# ----------------------------------------------------------------------------
# Embedding Configuration
# ----------------------------------------------------------------------------
# Embedding provider: "openai" or "sentence-transformers"
EMBEDDING_PROVIDER=openai

# For OpenAI embeddings
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# For sentence-transformers (local, no API key needed)
# EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
# EMBEDDING_DIMENSION=384

# ----------------------------------------------------------------------------
# Document Processing
# ----------------------------------------------------------------------------
# Chunking strategy
CHUNK_SIZE=512
CHUNK_OVERLAP=50
CHUNK_SEPARATOR=\n\n

# Supported file types (comma-separated)
SUPPORTED_FILE_TYPES=pdf,txt,md,docx

# Max file upload size (in MB)
MAX_FILE_SIZE_MB=10

# ----------------------------------------------------------------------------
# Retrieval Configuration
# ----------------------------------------------------------------------------
# Number of document chunks to retrieve
RETRIEVAL_TOP_K=5

# Minimum similarity score threshold (0.0 to 1.0)
MIN_SIMILARITY_SCORE=0.5

# ----------------------------------------------------------------------------
# FastAPI Application
# ----------------------------------------------------------------------------
# Application settings
APP_NAME=Quilora
APP_VERSION=0.1.0
APP_DESCRIPTION=Ask your documents anything
DEBUG=false

# Server settings
HOST=0.0.0.0
PORT=8000

# CORS settings (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ----------------------------------------------------------------------------
# Logging
# ----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# ----------------------------------------------------------------------------
# Development/Testing
# ----------------------------------------------------------------------------
# Data directory for uploaded documents
DATA_DIR=./data/documents

# Enable request/response logging
LOG_REQUESTS=false